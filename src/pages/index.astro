import Latestnews from "../components/Latestnews.astro";
import Listkomponent from "../components/Listkomponent.astro";
import Newsletter from "../components/Newsletter.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="src/styles/tokens.css">
		<link rel="stylesheet" href="src/styles/global.css">
		<link rel="stylesheet" href="src/styles/indexstyles.css">
		<title>Sakura festival - Start</title>
	</head>
	<body>
		<header>
			<Header/>
		</header>
		<main>
			<Herosection />
			<div class="notice">Entrance to the festival is <em class="und">free</em> for everyone.</div>
			<section class="ns">
				<h2>
					Where Japan and Denmark meet
				</h2>
				<p>
					In Japan people love and admire Sakura blossom and almost everybody goes out to enjoy its beauty together with families, friends, lovers, office-mates and so forth wherever and whenever Sakura bloom. 
				</p>
				<p>
					Once a year Sakura connects people and people meet people under Sakura trees. It is also the utmost and fundamental goal of the Festival.
				</p>
			</section>
			<div>
				<Infomap />
			</div>
			<section>
				<h2>
					Latest News
					<Latestnews />
				</h2>
			</section>
			<section id="newslettersection">
				<div>
					<div>
						<h2>Don't miss out on anything!</h2>
						<p>
							Receive the upcoming fascinating events, guests and activities.
						</p>
						<p>
							Sign up for our newsletter and get the most relevant updates about the festival right on your inbox.
						</p>
						<p class="fineprint">
							You can unsubscribe at any moment.
							By signing up, you confirm you have read and agree with our Terms of Use and Privacy Policy.
						</p>
					</div>
					<button>Sign up</button>
				</div>
			</section>
			<Newsletter />
    <section id="entrancesection">
      <img src="origami_hund.svg" id="hund" alt="hund_origami" />
      <div id="text">
        <h2>Entrance is free</h2>
        <p>
          As always, the entrance to the festival is <a href="">free</a> for everyone
        </p>
        <p>
          We are excited to welcome people from all over Denmark and the
          Copenhagen area to experience some of the best Japan has to offer.
        </p>
      </div>
      <a href="programme">Programme</a>
      <a href=""
        >LEARN MORE ABOUT THE FESTIVAL <img
          src="arrow_right.svg"
          alt="pil"
        /></a
      >
      <img src="sakura_pink.svg" id="sakura_pink" alt="sakura_trÃ¦" />
    </section>
    <Listkomponent />
		</main>
		<footer>
			<Footercomp />
		</footer>
	</body>
	<script>
        document.getElementById('index.html').style.backgroundColor = "var(--nav-bg-current)";
        document.getElementById('index.html').firstChild.style.color = "var(--nav-currentwhite)"
    </script>
</html>
