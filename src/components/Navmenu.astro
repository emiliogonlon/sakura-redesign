---
import Navbutton from "../components/Navbutton.astro"
import SoMe from "../components/SoMe.astro"
---

<ul id="navmenu">
    <li id="hamburgercontainer">
        <svg width="38" height="34" viewBox="0 0 38 34" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="38" height="6" fill="#D9D9D9"/>
            <rect y="14" width="38" height="6" fill="#D9D9D9"/>
            <rect y="28" width="38" height="6" fill="#D9D9D9"/>
        </svg>
    </li>
    <Navbutton label="Home" path="index.html"></Navbutton>
    <Navbutton label="tests" path="tests.html"></Navbutton>
    <Navbutton label="Programme" path="programme.html"></Navbutton>
    <Navbutton label="Map / booths" path="mapbooths.html"></Navbutton>
    <Navbutton label="About" path="about.html"></Navbutton>
    <Navbutton label="Contact" path="contact.html"></Navbutton>
    <li id="somerow">
        <SoMe />
    </li>
</ul>
<style>
    ul {
        display: grid;
        grid-template-columns: auto;
        list-style: none;
        width: 100%;
        max-height: 100vh;
        /* justify-content: start; */
        gap: var(--spacing-normal);
        background-color: var(--nav-currentwhite);
        /* opacity: 50%; */
        margin: 0 0 0 33%;
        padding: 5% 0;
    }
    #hamburgercontainer svg{
        position: absolute;
        right: var(--spacing-normal);
    }
    #somerow{
        margin-right: var(--spacing-normal);
        height: min-content;
    }
</style>